<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.DeleteProductView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:DeleteProductViewModel">
    <Grid>
        <Grid Grid.Row="0"
              IsVisible="{Binding!IsInConfirmationMode}"
              RowDefinitions="Auto, Auto, *" Margin="10">
            <DataGrid Grid.Row="0"
                      ItemsSource="{Binding Products}"
                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      BorderThickness="1"
                      BorderBrush="Gray">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding StockQuantity}" Width="80"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="&lt; Previous"
                        Command="{Binding GoToPreviousPageCommand}"
                        IsEnabled="{Binding GoToPreviousPageCommand}"/>
                <TextBlock Text="{Binding CurrentPage, StringFormat='{}Page {0}'}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPages, StringFormat='{}of {0}'}" VerticalAlignment="Center"/>
                <Button Content="Next &gt;"
                        Command="{Binding GoToNextPageCommand}"
                        IsEnabled="{Binding CanGoToNextPage}"/>
            </StackPanel>
            <Border Grid.Row="2"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel Spacing="10" Margin="10">
                    <Button Content="Delete Product"
                            Command="{Binding DeleteProductCommand}"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            IsEnabled="{Binding !!SelectedProduct}"/>
                </StackPanel>
            </Border>
        </Grid>
        <Border IsVisible="{Binding IsInConfirmationMode}" Padding="20">
            <StackPanel Spacing="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Successfully Deleted Product" FontSize="22" FontWeight="Bold"/>
                <WrapPanel>
                    <TextBlock Text="Product Id: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding DeletedProduct.Id, FallbackValue='N/A'}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Product Name: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding DeletedProduct.Name, FallbackValue='N/A'}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Category: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding DeletedProduct.Category.Name, FallbackValue='N/A'}"/>
                </WrapPanel>
                <Button Content="Go Back" Command="{Binding DeleteAnotherProductCommand}" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
