<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.CategoriesView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:CategoriesViewModel">
    <Grid RowDefinitions="Auto, Auto, *, Auto" Margin="10">
        <TextBlock Grid.Row="0" Text="All Categories" FontSize="24" FontWeight="Bold"/>
        
        <Border Grid.Row="1" Padding="10" CornerRadius="3" Background="#3333">
            <WrapPanel ItemSpacing="15" VerticalAlignment="Center">
                <StackPanel Spacing="5" Orientation="Horizontal">
                    <TextBlock Text="Filter by Category name: " VerticalAlignment="Center"/>
                    <TextBox Text="{Binding FilterByName}" Watermark="Enter category name..." Width="200"/>
                </StackPanel>
                <StackPanel Spacing="5" Orientation="Horizontal">
                    <CheckBox Content="Check to filter for active status: true" IsChecked="{Binding FilterByActiveStatus}"/>
                </StackPanel>
                <StackPanel Spacing="5" Orientation="Horizontal">
                    <Button Content="Filter results" Command="{Binding LoadCategoriesCommand}"/>
                </StackPanel>
            </WrapPanel>
        </Border>
        
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="Auto"/>
                <DataGridTextColumn Header="IsActive" Binding="{Binding IsActive}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="&lt; Previous"
                    Command="{Binding GoToPreviousPageCommand}"
                    IsEnabled="{Binding CanGoToPreviousPage}"/>
            <TextBlock Text="{Binding CurrentPage, StringFormat='{}Page {0}'}" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalPages, StringFormat='{}of {0}'}" VerticalAlignment="Center"/>
            <Button Content="Next &gt;"
                    Command="{Binding GoToNextPageCommand}"
                    IsEnabled="{Binding CanGoToNextPage}"/>
        </StackPanel>
    </Grid>
</UserControl>
