<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.ProductDetailView"
             xmlns:local="using:ECommerce.AvaloniaClient.Helpers"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:ProductDetailViewModel">
    <Control.Resources>
        <local:EnumToIntConverter x:Key="enumToIntConverter"/>
    </Control.Resources>
    <Grid RowDefinitions="Auto" Margin="10">
        <StackPanel Grid.Row="0">
            <Button Content="Back To All Products"
                    Command="{Binding GoBackCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15"/>
            <TextBlock Text="Product Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
            <Border Padding="15" CornerRadius="5" Background="#3a3a3a3a">
                <StackPanel Spacing="10">
                    <WrapPanel>
                        <TextBlock Text="Name: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.Name, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Description: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.Description, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Stock Keeping Unit: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.StockKeepingUnit, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Price: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.Price, StringFormat={}{0:C}, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Discount Percentage: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.Discount, Converter={StaticResource enumToIntConverter}, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Quantity In Stock: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.StockQuantity, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Is Actively For Sale: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.IsActive, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Category: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedProduct.Category.Name, FallbackValue='N/A'}"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
