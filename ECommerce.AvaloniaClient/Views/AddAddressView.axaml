<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.AddAddressView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:AddAddressViewModel">
    <UserControl.Styles>
        <Style Selector="TextBlock.Error">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Styles>
    <Border Padding="20" CornerRadius="5" Background="#2d2d2d">
        <Grid>
            <ScrollViewer IsVisible="{Binding !IsInConfirmationMode}">
                <StackPanel Spacing="10" Margin="10">
                    <TextBlock Text="Add A New Address" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Street Number"/>
                    <TextBox Text="{Binding StreetNumber, Mode=TwoWay}"/>
                    <TextBlock Classes="Error" Text="{Binding StreetNumberErrors}"/>
                    
                    <TextBlock Text="Street Name"/>
                    <TextBox Text="{Binding StreetName, Mode=TwoWay}"/>
                    <TextBlock Classes="Error" Text="{Binding StreetNameErrors}"/>
                    
                    <TextBlock Text="City"/>
                    <TextBox Text="{Binding City, Mode=TwoWay}"/>
                    <TextBlock Classes="Error" Text="{Binding CityErrors}"/>
                    
                    <TextBlock Text="State"/>
                    <TextBox Text="{Binding State, Mode=TwoWay}"/>
                    <TextBlock Classes="Error" Text="{Binding StateErrors}"/>
                    
                    <TextBlock Text="Zip Code"/>
                    <TextBox Text="{Binding ZipCode, Mode=TwoWay}"/>
                    <TextBlock Classes="Error" Text="{Binding ZipCodeErrors}"/>
                    
                    <TextBlock Text="Country"/>
                    <TextBox Text="{Binding Country, Mode=TwoWay}"/>
                    <TextBlock Classes="Error" Text="{Binding CountryErrors}"/>
                    
                    <TextBlock Text="Address Type"/>
                    <ComboBox ItemsSource="{Binding AddressTypes}"
                              SelectedItem="{Binding SelectedType, Mode=TwoWay}"/>
                    <Button Content="Add Address" Command="{Binding AddAddressCommand}" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding ErrorMessage}" Classes="Error" IsVisible="{Binding !!ErrorMessage}" HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
            
            <StackPanel
                Spacing="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsVisible="{Binding IsInConfirmationMode}">
                <TextBlock Text="Address Added Successfully!" FontSize="22" FontWeight="Bold" Foreground="LightGreen" HorizontalAlignment="Center"/>
                
                <TextBlock Text="{Binding AddedAddress.FullAddress, FallbackValue='Unable to display address at this time'}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,10"/>
                
                <Button Content="Go Back"
                        Command="{Binding AddAnotherAddressCommand}"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
