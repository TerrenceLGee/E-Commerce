<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.CreateSaleView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:CreateSaleViewModel">
    <UserControl.Styles>
        <Style Selector="TextBlock.Error">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Styles>
    <Grid>
        <Grid IsVisible="{Binding !IsInConfirmationMode}"
              ColumnDefinitions="*, Auto, 1.5*" RowDefinitions="Auto, *" Margin="10">
            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Shop" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
            <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto, *, Auto, Auto">
                <TextBlock Grid.Row="0" Text="Available Products" FontWeight="Bold" Margin="0,0,0,5"/>
                <DataGrid Grid.Row="1" ItemsSource="{Binding AvailableProducts}" SelectedItem="{Binding SelectedProduct}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding StockQuantity}" Width="80"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,5">
                    <Button Content="&lt; Previous"
                            Command="{Binding GoToPreviousProductPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousProductPage}"/>
                    <TextBlock Text="{Binding CurrentProductPage, StringFormat='{}Page {0}'}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalProductPages, StringFormat='{}of {0}'}" VerticalAlignment="Center"/>
                    <Button Content="Next &gt;"
                            Command="{Binding GoToNextProductPageCommand}" IsEnabled="{Binding CanGoToNextProductPage}"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <TextBlock Text="Quantity: " VerticalAlignment="Center"/>
                    <NumericUpDown Value="{Binding QuantityToAdd}" Minimum="1" Width="80"/>
                    <Button Content="Add To Cart" Command="{Binding AddToCartCommand}"/>
                </StackPanel>
            </Grid>
            <Rectangle Grid.Row="1" Grid.Column="1" Fill="Gray" Width="1" Margin="10,0"/>
            <Grid Grid.Row="1" Grid.Column="2" RowDefinitions="Auto, *">
                <Grid Grid.Row="0" RowDefinitions="Auto, Auto, *, Auto">
                    <TextBlock Grid.Row="0" Text="Shipping Address" FontWeight="Bold"/>
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding SavedAddresses}"
                              SelectedItem="{Binding SelectedSavedAddress}"
                              IsReadOnly="True"
                              MaxHeight="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding AddressType}"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding FullAddress}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
        <Border IsVisible="{Binding IsInConfirmationMode}" Padding="20">
            <StackPanel Spacing="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Sale completed successfully!" FontSize="22" FontWeight="Bold" Foreground="LightGreen" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding AddedSale.CustomerId, FallbackValue='Unable to display customer Id'}"/>
                <TextBlock Text="{Binding AddedSale.TotalPrice, StringFormat={}{0:C},FallbackValue='Unable to display total sale price'}"/>
                <TextBlock Text="{Binding AddedSale.Status, FallbackValue='Unable to display sale status'}"/>
                <TextBlock Text="{Binding AddedSale.CreatedAt, FallbackValue='Unable to display sale creation date'}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
