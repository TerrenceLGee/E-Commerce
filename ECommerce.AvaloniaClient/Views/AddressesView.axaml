<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.AddressesView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:AddressesViewModel">
    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Margin="10">
        <TextBlock Grid.Row="0" Text="All Addresses" FontSize="24" FontWeight="Bold"/>
        <ProgressBar Grid.Row="1" IsIndeterminate="True" IsVisible="{Binding IsLoading}"/>
        
        <Border Grid.Row="2" Padding="10" CornerRadius="3" Background="#3333">
           <WrapPanel ItemSpacing="15" VerticalAlignment="Center">
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter by Street Number: " VerticalAlignment="Center"/>
                   <TextBox Text="{Binding FilterByStreetNumber}" Watermark="Enter street number..." Width="200"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter by Street Name: " VerticalAlignment="Center"/>
                   <TextBox Text="{Binding FilterByStreetName}" VerticalAlignment="Center"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter by City: " VerticalAlignment="Center"/>
                   <TextBox Text="{Binding FilterByCity}" Watermark="Enter city..." Width="200"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter by State: " VerticalAlignment="Center"/>
                   <TextBox Text="{Binding FilterByState}" Watermark="Enter state..." Width="200"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter by Zip Code: " VerticalAlignment="Center"/>
                   <TextBox Text="{Binding FilterByZipCode}" Watermark="Enter zip code..." Width="200"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter By Country: " VerticalAlignment="Center"/>
                   <TextBox Text="{Binding FilterByCountry}" Watermark="Enter country..." Width="200"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Filter by Address Type: " VerticalAlignment="Center"/>
                   <ComboBox ItemsSource="{Binding AddressTypes}"
                             SelectedItem="{Binding FilterByType}"/>
               </StackPanel>
               
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <TextBlock Text="Order results by: " VerticalAlignment="Center"/>
                   <ComboBox ItemsSource="{Binding SortOptions}"
                             SelectedItem="{Binding SelectedOption}"/>
               </StackPanel>
               <StackPanel Spacing="5" Orientation="Horizontal">
                   <Button Content="Filter results" Command="{Binding LoadAddressesCommand}"/>
               </StackPanel>
           </WrapPanel>
        </Border>
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Addresses}"
                  SelectedItem="{Binding SelectedAddress}"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Street Number" Binding="{Binding StreetNumber}" Width="*"/>
                <DataGridTextColumn Header="Street Name" Binding="{Binding StreetName}" Width="*"/>
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*"/>
                <DataGridTextColumn Header="Zip Code" Binding="{Binding ZipCode}" Width="*"/>
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
                <DataGridTextColumn Header="Address Type" Binding="{Binding AddressType}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="&lt; Previous"
                    Command="{Binding GoToPreviousPageCommand}"
                    IsEnabled="{Binding CanGoToPreviousPage}"/>
            <TextBlock Text="{Binding CurrentPage, StringFormat='{}Page {0}'}" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalPages, StringFormat='{}of {0}'}" VerticalAlignment="Center"/>
            <Button Content="Next &gt;"
                    Command="{Binding GoToNextPageCommand}"
                    IsEnabled="{Binding CanGoToNextPage}"/>
        </StackPanel>
    </Grid>
</UserControl>
