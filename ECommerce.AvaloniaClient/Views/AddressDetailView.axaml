<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.AddressDetailView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:AddressDetailViewModel">
    <Grid RowDefinitions="Auto" Margin="10">
        <StackPanel Grid.Row="0">
            <Button Content="Back To All Addresses"
                    Command="{Binding GoBackCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15"/>
            <TextBlock Text="Address Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
            <Border Padding="15" CornerRadius="5" Background="#3a3a3a3a">
                <StackPanel Spacing="10">
                    <WrapPanel>
                        <TextBlock Text="Street Number: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.StreetNumber, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Street Name: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.StreetName, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="City: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.City, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="State: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.State, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Zip Code: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.ZipCode, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Country: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.Country, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Address Type: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.AddressType, FallbackValue='N/A'}"/>
                    </WrapPanel>
                    
                    <WrapPanel>
                        <TextBlock Text="Full Address: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedAddress.FullAddress, FallbackValue='N/A'}"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
