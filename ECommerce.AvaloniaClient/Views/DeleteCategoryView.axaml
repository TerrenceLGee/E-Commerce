<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ECommerce.AvaloniaClient.Views.DeleteCategoryView"
             xmlns:vm="using:ECommerce.AvaloniaClient.ViewModels"
             x:DataType="vm:DeleteCategoryViewModel">
    <Grid>
        <Grid Grid.Row="0"
              IsVisible="{Binding !IsInConfirmationMode}"
              RowDefinitions="Auto, Auto, *" Margin="10">
            <DataGrid Grid.Row="0"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      BorderThickness="1"
                      BorderBrush="Gray">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Is Active" Binding="{Binding IsActive}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="&lt; Previous"
                        Command="{Binding GoToPreviousPageCommand}"
                        IsEnabled="{Binding GoToPreviousPageCommand}"/>
                <TextBlock Text="{Binding CurrentPage, StringFormat='{}Page {0}'}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPages, StringFormat='{}of {0}'}" VerticalAlignment="Center"/>
                <Button Content="Next &gt;"
                        Command="{Binding GoToNextPageCommand}"
                        IsEnabled="{Binding CanGoToNextPage}"/>
            </StackPanel>
            <Border Grid.Row="2"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel Spacing="10" Margin="10">
                    <Button Content="Delete Category"
                            Command="{Binding DeleteCategoryCommand}"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            IsEnabled="{Binding !!SelectedCategory}"/>
                </StackPanel>
            </Border>
        </Grid>
        <Border IsVisible="{Binding IsInConfirmationMode}" Padding="20">
            <StackPanel Spacing="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Successfully Deleted Category" FontSize="22" FontWeight="Bold"/>
                <WrapPanel>
                    <TextBlock Text="Category Id: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding DeletedCategory.Id, FallbackValue='N/A'}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Category Name: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding DeletedCategory.Name, FallbackValue='N/A'}"/>
                </WrapPanel>
                <Button Content="Go Back" Command="{Binding DeleteAnotherCategoryCommand}"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
